<!DOCTYPE html>
<html lang="en">
<head>
  <title>Regala Amor</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
  <link rel="stylesheet" href="/stylesheets/main.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body>
        <nav id="mainNavbar" class="navbar bg-dark navbar-dark navbar-expand-md py-0">
            <div class="container">
                <a href="/" class="navbar-brand"><i class="fas fa-gift mr-2"></i>Regala Amor</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navLinks">
                    <ul class="navbar-nav">
                        <% if(currentUser && currentUser.isAdmin) { %>
                            <li class="nav-item">
                                <a class="nav-link font-italic text-muted">Admin</a>
                            </li>
                            <% if(cart) { %>
                                <li class="nav-item">
                                    <a href="/cart" class="nav-link">Mi Carrito</a>
                                </li> 
                            <% } %>
                            <li class="nav-item">
                                <a href="/gifts" class="nav-link">Regalos</a>
                            </li> 
                            <li class="nav-item">
                                <a href="/user/dashboard" class="nav-link">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a href="/user/logout" class="nav-link">Logout</a>
                            </li> 
                        <% } %>
                        <% if(currentUser && !currentUser.isAdmin){ %>
                            <li class="nav-item">
                                <a class="nav-link font-italic text-muted"><%= currentUser.username %></a>
                            </li> 
                            <% if(cart) { %>
                                <li class="nav-item">
                                    <a href="/cart" class="nav-link">Mi Carrito</a>
                                </li> 
                            <% } %>
                            <li class="nav-item">
                                <a href="/gifts" class="nav-link">Regalos</a>
                            </li>
                            <li class="nav-item">
                                <a href="/user/logout" class="nav-link">Logout</a>
                            </li>
                        <% } %>
                        <% if(!currentUser) { %>
                            <% if(cart) { %>
                                <li class="nav-item">
                                    <a href="/cart" class="nav-link">Mi Carrito</a>
                                </li> 
                            <% } %>
                            <li class="nav-item">
                                <a href="/gifts" class="nav-link">Regalos</a>
                            </li>                            
                            <li class="nav-item">
                                <a href="/user/login" class="nav-link">Ingresar</a>
                            </li>                            
                            <li class="nav-item">
                                <a href="/user/register" class="nav-link">Registrarse</a>
                            </li>
                        <% } %>                                                                             
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <% if(error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>
        
        