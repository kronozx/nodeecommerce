<%- include('../partials/header') -%>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-8">
            <form action="/user/reset/<%= token %>" method="POST">
                <legend>Reset Password</legend>
                <div class="form-group">
                  <label for="password">Nuevo Password</label>
                  <input type="password" class="form-control" id="password" name="password" autofocus placeholder="New Password" minlength="8" aria-describedby="email">
                </div>
                <div class="form-group">
                    <label for="confirm">Confirmar Password</label>
                    <input type="password" class="form-control" id="confirm" name="confirm" autofocus placeholder="Confirm Password" minlength="8" aria-describedby="email">
                  </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Cambiar Password</button>
                </div>
              </form>
        </div>
    </div>
</div>


<%- include('../partials/footer') -%>