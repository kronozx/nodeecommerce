<%- include('../partials/header') -%>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-8">
            <h1>Sign Up Form</h1>
            <form action="/user/register" method="POST">
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="username" aria-describedby="username" autofocus/>
                    <!--<small id="" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                </div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" name="email" placeholder="email" aria-describedby="email" autofocus/>
                </div>
                <div class="form-group">
                    <label for="userpassword">Password (al menos 8 caracteres)</label>
                    <input type="password" class="form-control" id="userpassword" name="password" minlength="8" placeholder="password" autofocus/>
                </div>
                <div class="form-group">
                    <label for="admincode">Admin Code</label>
                    <input type="text" class="form-control" id="admincode" name="admincode" placeholder="Admin Code" autofocus/>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    
</div>


