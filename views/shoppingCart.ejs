<%- include('partials/header') -%>

<div class="container">
    <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Producto</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Precio</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Cantidad</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Eliminar</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% cartItems.forEach(function(cartItem) { %>
                    <tr>
                        <th scope="row" class="border-0">
                            <div class="p-2">
                            <img src="<%= cartItem.image %>" alt="" width="70" class="img-fluid rounded shadow-sm">
                            <div class="ml-3 d-inline-block align-middle">
                                <h5 class="mb-0"> <a href="/gifts/<%= cartItem._id %>" class="text-dark d-inline-block align-middle"><%= cartItem.product %></a></h5><span class="text-muted font-weight-normal font-italic d-block">Categoría: Anchetas</span>
                            </div>
                            </div>
                        </th>
                        <td class="border-0 align-middle"><strong><%= cartItem.price %></strong></td>
                        <td class="border-0 align-middle"><strong>1</strong></td>
                        <td class="border-0 align-middle">
                            <form action="/cart/products/delete" method="POST">
                                <input hidden value="<%= cartItem._id %>" name="itemId"/>
                                <button class="border-0">
                                    <span>
                                        <i class="fas fa-trash"></i>
                                    </span>
                                </button>
                            </form> 
                        </td>
                    </tr>
                <% }); %>   
              </tbody>
            </table>

            <div class="d-flex flex-row p-3 mb-2 bg-light text-dark justify-content-end">
              <div class="mx-3">
                <strong>TOTAL</strong>
              </div>
              <div class="mx-3">
                <strong><%= total %></strong>
              </div>
            </div>

            <div class="d-flex justify-content-end">
                <a href="/gifts" class="btn btn-primary m-2">Seguir Comprando</a>
                <% if(buttonPayStatus !== 'inactive') {%>
                  <form action="/cart/purchase" method="POST">
                    <input hidden value="<%= total %>" name="cartTotal"/>
                    <button class="btn btn-success m-2">Finalizar Pedido</button>
                  </form> 
                <% } %>
            </div>
            <div class="alert alert-warning font-weight-bolder text-center mt-3" role="alert">
              Recuerda que por el momento únicamente operamos en Ebéjico y su zona rural. 
          </div>
          </div>
          <!-- End -->
        </div>
      </div>
</div>


    

<%- include('partials/footer') -%>